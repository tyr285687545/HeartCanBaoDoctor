<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/diaolg_shape"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/dialog_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxWidth="200dp"
        android:minWidth="200dp"
        android:padding="10dp"
        android:textColor="#000"
        android:textSize="15sp" />

    <RelativeLayout
        android:id="@+id/cutline"
        android:layout_width="wrap_content"
        android:layout_height="0.1dp"
        android:layout_alignLeft="@+id/dialog_tv_content"
        android:layout_alignRight="@+id/dialog_tv_content"
        android:layout_below="@+id/dialog_tv_content"
        android:background="#757575" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dialog_tv_content"
        android:layout_alignRight="@+id/dialog_tv_content"
        android:layout_below="@+id/cutline"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#00000000"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="#757575" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
        android:background="#757575"  />

        <Button
            android:id="@+id/dialog_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#00000000"
            android:padding="10dp"
            android:text="@string/dialog_yes"
            android:textColor="#2C92ED" />
    </LinearLayout>

</RelativeLayout>