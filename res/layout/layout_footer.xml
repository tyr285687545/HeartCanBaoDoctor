<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/main_radio"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#E2F2FB"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="10" >

        <RadioButton
            android:id="@+id/map_footer_btn1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            android:contentDescription="@string/appoin"
            android:drawableTop="@drawable/tabhost_appoin"/>

        <RadioButton
            android:id="@+id/map_footer_btn2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:contentDescription="@string/appoin"
            android:drawableTop="@drawable/tabhost_follow"
            android:button="@null"
            android:gravity="center" />

        <RadioButton
            android:id="@+id/map_footer_btn3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:contentDescription="@string/appoin"
            android:gravity="center"
            android:drawableTop="@drawable/tabhost_patient" />

        <RadioButton
            android:id="@+id/map_footer_btn4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:button="@null"
            android:layout_weight="2"
            android:contentDescription="@string/appoin"
            android:gravity="center"
            android:drawableTop="@drawable/tabhost_consulation"  />

        <RadioButton
            android:id="@+id/map_footer_btn5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:button="@null"
            android:contentDescription="@string/appoin"
            android:gravity="center"
            android:drawableTop="@drawable/tabhost_me"   />
    </RadioGroup>

</LinearLayout>