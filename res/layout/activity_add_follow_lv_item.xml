<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:gravity="center_vertical"
    android:padding="5dp"
    android:orientation="horizontal" >

    <com.example.heartcanbaodocver.widget.RoundImageView
        android:id="@+id/img_head"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/follow_add_lv_item_tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/follow_add_lv_item_tv_sex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:layout_weight="2"
        android:gravity="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/follow_add_lv_item_tv_age"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:layout_weight="2"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/follow_add_lv_item_cb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"/>

</LinearLayout>